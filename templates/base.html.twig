<!DOCTYPE html>
<html>
	<head>
		<meta charset='UTF-8'/>
		<meta name='viewport' content='width=device-width, initial-scale=1.0'/>
		<link rel="shortcut icon" href="{{ asset('img/favicon.ico') }}"/>
		<link rel='stylesheet' href='{{ asset('css/style_reset.css') }}'/>
		<link rel='stylesheet' href='{{ asset('css/style_main.css') }}'/>
		<link id='link_mode' rel='stylesheet' href='{{ asset('css/style_dark.css') }}'/>
		<script src='https://kit.fontawesome.com/b15eb9f5aa.js' crossorigin='anonymous'></script>
		<script src='https://code.jquery.com/jquery-3.5.0.min.js'></script>
		{% block title %}{% endblock %}
	</head>
	<body>
		{% include "loader.html.twig" %}
		{% include "header.html.twig" %}
		{% block body %}{% endblock %}
		{% include "footer.html.twig" %}
		{% block javascripts %}
			<script src='{{ asset('js/form.js') }}'></script>
			<script src='{{ asset('js/mode.js') }}'></script>
			<script src='{{ asset('js/loader.js') }}'></script>
			<script src='{{ asset('js/translate.js') }}'></script>
		{% endblock %}
		{% block firebase %}
			<!-- The core Firebase JS SDK is always required and must be listed first -->
			<script src="/__/firebase/8.1.1/firebase-app.js"></script>
			<!-- TODO: Add SDKs for Firebase products that you want to use https://firebase.google.com/docs/web/setup#available-libraries -->
			<script src="/__/firebase/8.1.1/firebase-analytics.js"></script>
			<!-- Initialize Firebase -->
			<script src="/__/firebase/init.js"></script>
		{% endblock %}
	</body>
</html>
